# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
BASEPATH=
NEXT_PUBLIC_APP_URL=http://localhost:3000${BASEPATH}
NEXT_PUBLIC_DOCS_URL=https://demos.themeselection.com/materio-mui-nextjs-admin-template/documentation

# -----------------------------------------------------------------------------
# Auth base URL / JWT secret (используется для сокетов/email/сброса кэша)
# -----------------------------------------------------------------------------
AUTH_BASE_URL=http://localhost:3000${BASEPATH}
AUTH_JWT_SECRET=dev-jwt-secret-key-for-development-only
# Legacy NextAuth vars (оставлены для совместимости на переходный период)
NEXTAUTH_BASEPATH=${BASEPATH}/api/auth
NEXTAUTH_URL=${AUTH_BASE_URL}${NEXTAUTH_BASEPATH}
NEXTAUTH_SECRET=${AUTH_JWT_SECRET}

# Google OAuth 2.0 (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# For SQLite: relative to prisma/schema.prisma (./dev3.db -> prisma/dev3.db)
DATABASE_URL="file:./dev3.db"
# Optional Redis connection string for shared rate limit store
# Example: redis://default:password@localhost:6379/0
REDIS_URL=redis://localhost:6379
# Secret for HMAC-SHA256 hashing of IPs and emails in rate limiting (REQUIRED for production)
RATE_LIMIT_SECRET=dev-rate-limit-secret-key-32-chars-minimum-for-security

# AES-256-GCM encryption key for service credentials (32 bytes, 64 hex characters)
# Required if using external service configurations through the admin panel
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" or: openssl rand -hex 32
# WARNING: If lost, all encrypted credentials in the database cannot be recovered
ENCRYPTION_KEY=
# Retention for RateLimitEvent (days), default 90 if not set
RATE_LIMIT_EVENT_RETENTION_DAYS=90

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_URL=http://localhost:3000${BASEPATH}/api
NEXT_PUBLIC_API_URL=${API_URL}

# -----------------------------------------------------------------------------
# Socket.IO
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_SOCKET_IO=true
NEXT_PUBLIC_SOCKET_URL=
NEXT_PUBLIC_SOCKET_PATH=/socket.io

# -----------------------------------------------------------------------------
# Mapbox
# -----------------------------------------------------------------------------
MAPBOX_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# SMS.ru API
# -----------------------------------------------------------------------------
# API ключ для отправки SMS через SMS.ru (https://sms.ru)
SMSRU_API_KEY=
