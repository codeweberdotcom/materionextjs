{
  "id": null,
  "uid": "materio-rl",
  "title": "Materio Rate Limit Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Redis Failures (5m)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "increase(rate_limit_redis_failures_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Unknown Modules (5m)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "increase(rate_limit_unknown_module_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Consume Duration (p95)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rate_limit_consume_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Backend in Use",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate_limit_store_backend",
          "legendFormat": "{{backend}}",
          "refId": "A"
        }
      ]
    }
  ]
}
