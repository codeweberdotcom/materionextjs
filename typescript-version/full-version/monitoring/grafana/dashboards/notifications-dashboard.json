{
  "id": null,
  "uid": "materio-notifications",
  "title": "Materio Notifications & Queue Overview",
  "description": "Bull queue monitoring for notifications (email, sms, browser, telegram)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["notifications", "bull", "queue"],
  "templating": {
    "list": [
      {
        "name": "environment",
        "type": "custom",
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        },
        "options": [
          { "selected": true, "text": "All", "value": "$__all" },
          { "selected": false, "text": "development", "value": "development" },
          { "selected": false, "text": "production", "value": "production" }
        ],
        "includeAll": true,
        "multi": false
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "ðŸ“Š Overview Stats",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Queue Size",
      "description": "Current number of jobs in queue",
      "gridPos": { "x": 0, "y": 1, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "sum(notification_queue_size{environment=~\"$environment\"})",
          "legendFormat": "Queue Size",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Jobs Added (5m)",
      "description": "Jobs added to queue in last 5 minutes",
      "gridPos": { "x": 4, "y": 1, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "sum(increase(notification_jobs_added_total{environment=~\"$environment\"}[5m]))",
          "legendFormat": "Jobs Added",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Jobs Processed (5m)",
      "description": "Jobs processed in last 5 minutes",
      "gridPos": { "x": 8, "y": 1, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "sum(increase(notification_jobs_processed_total{environment=~\"$environment\", status=\"success\"}[5m]))",
          "legendFormat": "Processed",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Failures (5m)",
      "description": "Failed notifications in last 5 minutes",
      "gridPos": { "x": 12, "y": 1, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "sum(increase(notifications_failed_total{environment=~\"$environment\"}[5m]))",
          "legendFormat": "Failures",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Retries (5m)",
      "description": "Retry attempts in last 5 minutes",
      "gridPos": { "x": 16, "y": 1, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "orange", "value": 20 }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "sum(increase(notification_retries_total{environment=~\"$environment\"}[5m]))",
          "legendFormat": "Retries",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Queue Type",
      "description": "Current queue backend (Bull or In-memory)",
      "gridPos": { "x": 20, "y": 1, "w": 4, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "bull": { "text": "ðŸŸ¢ Bull (Redis)", "color": "green" } } },
            { "type": "value", "options": { "in-memory": { "text": "ðŸŸ¡ In-Memory", "color": "yellow" } } }
          ],
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "expr": "topk(1, notification_queue_size{environment=~\"$environment\"}) by (queue_type)",
          "legendFormat": "{{queue_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "ðŸ“ˆ Queue Activity",
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Queue Size Over Time",
      "description": "Queue size by type (Bull vs In-memory)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "notification_queue_size{environment=~\"$environment\"}",
          "legendFormat": "{{queue_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Queue Switches",
      "description": "Switches between Bull and In-memory queue",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "increase(notification_queue_switches_total{environment=~\"$environment\"}[5m])",
          "legendFormat": "{{from_type}} â†’ {{to_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "ðŸ“§ Notifications by Channel",
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Sent by Channel",
      "description": "Notifications sent per channel (success)",
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["sum"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(rate(notifications_sent_total{environment=~\"$environment\", status=\"success\"}[5m])) by (channel) * 60",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Failed by Channel",
      "description": "Failed notifications per channel",
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["sum"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(rate(notifications_failed_total{environment=~\"$environment\"}[5m])) by (channel) * 60",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "âš¡ Performance",
      "gridPos": { "x": 0, "y": 23, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Send Duration (p50, p95, p99)",
      "description": "Notification send duration percentiles",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(notification_send_duration_seconds_bucket{environment=~\"$environment\"}[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(notification_send_duration_seconds_bucket{environment=~\"$environment\"}[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(notification_send_duration_seconds_bucket{environment=~\"$environment\"}[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Jobs Throughput",
      "description": "Jobs processed per minute",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80
          }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(rate(notification_jobs_processed_total{environment=~\"$environment\"}[1m])) by (status) * 60",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "ðŸ”„ Retries & Errors",
      "gridPos": { "x": 0, "y": 32, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Retries by Attempt",
      "description": "Retry attempts distribution",
      "gridPos": { "x": 0, "y": 33, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(rate(notification_retries_total{environment=~\"$environment\"}[5m])) by (attempt) * 60",
          "legendFormat": "Attempt {{attempt}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "piechart",
      "title": "Error Types Distribution",
      "description": "Distribution of notification errors by type",
      "gridPos": { "x": 12, "y": 33, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "values": ["value", "percent"] },
        "pieType": "pie",
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "sum(notifications_failed_total{environment=~\"$environment\"}) by (error_type)",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "ðŸ“‹ Scenarios",
      "gridPos": { "x": 0, "y": 41, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Scenario Executions",
      "description": "Notification scenario executions over time",
      "gridPos": { "x": 0, "y": 42, "w": 24, "h": 8 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(rate(scenario_executions_total{environment=~\"$environment\"}[5m])) by (status) * 60",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    }
  ]
}


